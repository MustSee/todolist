<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>Todo</title>
  <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css">
  <link rel="stylesheet" href="/bootstrap/css/custom.css">
</head>
<body>
  <nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">Todolist</a>
        </div>
      </div>
    </nav>
  <div class="container">
    <div class="row starter-template">
      <div class="col-lg-12">
        <ol>
          <% todolist.forEach(function (element, index) { %>
            <li>
              <a href='/supprimer/<%= element.id %>'> &#9949; </a><%= element.message %> &#8658; <a href="/modifier/<%= element.id %>">modifier la t√¢che</a>
            </li>
          <% }); %>
        </ol>

        <form method="post" action="/">
          <div class="form-group">
            <label for="newtodo">Message</label>
            <textarea class="form-control" name="newtodo" id="newtodo" autofocus></textarea>
          </div>
          <input type="submit" class="btn btn-default right">
        </form>
      </div>

    </div>

  </div>
</body>
</html>
